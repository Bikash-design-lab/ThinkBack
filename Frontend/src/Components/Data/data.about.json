{
    "project": {
        "name": "ThinkBack",
        "tagline": "Your AI-powered educational helpdesk",
        "description": "Create knowledge tickets, get AI summaries instantly, and chat with powerful AI models — with full ticket context or in global tutor mode.",
        "github": "https://github.com/Bikash-design-lab/ThinkBack",
        "author": "~Bikash P B"
    },
    "stack": {
        "frontend": {
            "framework": "React",
            "bundler": "Vite",
            "language": "TypeScript"
        },
        "backend": {
            "framework": "FastAPI",
            "language": "Python 3.9",
            "server": "Uvicorn",
            "streaming": "SSE (Server-Sent Events)"
        },
        "database": {
            "name": "MongoDB",
            "driver": "Motor (AsyncIOMotorClient)",
            "note": "Async non-blocking driver for FastAPI compatibility"
        },
        "ai": {
            "provider": "OpenRouter",
            "sdk": "openai==2.21.0",
            "mode": "OpenAI-compatible API"
        }
    },
    "packages": [
        {
            "name": "fastapi",
            "purpose": "Web framework"
        },
        {
            "name": "uvicorn[standard]",
            "purpose": "ASGI server"
        },
        {
            "name": "motor",
            "purpose": "Async MongoDB driver"
        },
        {
            "name": "pymongo",
            "purpose": "MongoDB (base dependency)"
        },
        {
            "name": "pydantic",
            "version": "2.12.5",
            "purpose": "Data validation"
        },
        {
            "name": "openai",
            "version": "2.21.0",
            "purpose": "OpenRouter AI SDK"
        },
        {
            "name": "slowapi",
            "version": "0.1.9",
            "purpose": "Rate limiting"
        },
        {
            "name": "python-dotenv",
            "purpose": "Environment variable management"
        },
        {
            "name": "python-multipart",
            "purpose": "File/form data handling"
        }
    ],
    "security": {
        "cors": {
            "enabled": true,
            "middleware": "CORSMiddleware",
            "source": "FastAPI built-in (no install needed)"
        },
        "rate_limiting": {
            "enabled": true,
            "package": "slowapi",
            "version": "0.1.9"
        },
        "async_db": {
            "enabled": true,
            "driver": "Motor",
            "reason": "Prevents blocking FastAPI event loop"
        }
    },
    "ai_models": [
        {
            "id": "deepseek/deepseek-r1",
            "provider": "DeepSeek",
            "description": "DeepSeek R1 reasoning model - State-of-the-art open reasoning model, highly capable in math and coding.",
            "status": "active"
        },
        {
            "id": "anthropic/claude-3.5-sonnet",
            "provider": "Anthropic",
            "description": "Claude 3.5 Sonnet - Industry-leading intelligence and speed, surpassing many larger models.",
            "status": "active"
        },
        {
            "id": "anthropic/claude-3-opus",
            "provider": "Anthropic",
            "description": "Claude 3 Opus - Anthropic's most powerful model for complex analysis and creative writing.",
            "status": "active"
        },
        {
            "id": "google/gemini-2.0-flash-001",
            "provider": "Google",
            "description": "Gemini 2.0 Flash - Next-gen high-speed model with massive context window and multimodal power.",
            "status": "active"
        },
        {
            "id": "openai/gpt-4o",
            "provider": "OpenAI",
            "description": "GPT-4o omni model - OpenAI's most advanced and versatile flagship model for complex reasoning.",
            "status": "active"
        }
    ],
    "api_endpoints": [
        {
            "method": "GET",
            "path": "/tickets",
            "description": "Retrieve all tickets"
        },
        {
            "method": "POST",
            "path": "/tickets",
            "description": "Create a new ticket (triggers AI summary)"
        },
        {
            "method": "POST",
            "path": "/chat/global/stream",
            "description": "Stream global AI tutor chat (SSE)"
        },
        {
            "method": "POST",
            "path": "/chat/ticket/{id}/stream",
            "description": "Stream ticket-specific AI chat with full context (SSE)"
        },
        {
            "method": "GET",
            "path": "/",
            "description": "Server health check"
        }
    ],
    "ticket": {
        "fields": [
            {
                "name": "id",
                "type": "ObjectId",
                "note": "Auto-generated by MongoDB"
            },
            {
                "name": "title",
                "type": "string",
                "min_length": 5
            },
            {
                "name": "description",
                "type": "string",
                "min_length": 10
            },
            {
                "name": "category",
                "type": "string",
                "enum": [
                    "AI",
                    "Podcast",
                    "Education",
                    "Programming",
                    "Science",
                    "Math",
                    "Other"
                ]
            },
            {
                "name": "tags",
                "type": "string[]",
                "note": "Array of tag strings"
            },
            {
                "name": "ai_summary",
                "type": "string",
                "note": "Auto-generated by AI on ticket creation"
            },
            {
                "name": "created_at",
                "type": "datetime",
                "note": "UTC timestamp, auto-attached"
            }
        ],
        "validation": {
            "title_min_chars": 5,
            "description_min_chars": 10,
            "categories_whitelist": [
                "AI",
                "Podcast",
                "Education",
                "Programming",
                "Science",
                "Math",
                "Other"
            ]
        }
    },
    "features": [
        {
            "id": "ticket_system",
            "title": "Ticket System",
            "description": "Create structured knowledge posts with title, description, category and tags",
            "detail": "Every ticket automatically triggers AI summary generation on creation"
        },
        {
            "id": "ticket_chat",
            "title": "Ticket-Aware Chat",
            "description": "Chat with AI using a specific ticket as full context",
            "detail": "AI receives ticket title, description and summary as context injection"
        },
        {
            "id": "global_chat",
            "title": "Global Tutor Mode",
            "description": "Chat with AI without selecting a ticket — open educational tutor mode",
            "detail": "Step-by-step educational responses with official doc references"
        },
        {
            "id": "sse_streaming",
            "title": "Live SSE Streaming",
            "description": "All AI responses stream in real-time via Server-Sent Events",
            "detail": "Input disabled during stream, loading indicator active, [DONE] event signals completion"
        },
        {
            "id": "multi_model",
            "title": "Multi-Model Fallback",
            "description": "If primary model fails, system automatically tries next model in list",
            "detail": "Configurable via AI_MODEL_LIST in .env — no code changes needed to add models"
        },
        {
            "id": "rate_limiting",
            "title": "Rate Limiting",
            "description": "AI endpoints protected with per-IP rate limits via slowapi",
            "detail": "Prevents API credit drain and abuse"
        }
    ],
    "pages": [
        {
            "path": "/tickets",
            "description": "Ticket list page"
        },
        {
            "path": "/tickets/new",
            "description": "Create ticket page"
        },
        {
            "path": "/tickets/:id",
            "description": "Ticket detail page"
        },
        {
            "path": "/chat",
            "description": "AI chat page with ticket sidebar"
        }
    ],
    "chat_modes": [
        {
            "mode": "global",
            "endpoint": "/chat/global/stream",
            "context": "No ticket selected — general educational tutor",
            "prompt_style": "Step-by-step explanation with official docs"
        },
        {
            "mode": "ticket",
            "endpoint": "/chat/ticket/{id}/stream",
            "context": "Ticket title + description + ai_summary injected into prompt",
            "prompt_style": "Context-aware educational response referencing the ticket"
        }
    ]
}